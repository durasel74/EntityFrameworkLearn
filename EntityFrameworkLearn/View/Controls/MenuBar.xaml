<UserControl x:Class="EntityFrameworkLearn.View.Controls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EntityFrameworkLearn.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="40">

    <Border>
        <StackPanel>
            <ToggleButton Style="{StaticResource MenuButton}" 
                          Height="40" IsChecked="{Binding MenuVisible}">
                <Viewbox>
                    <TextBlock Text="☰"/>
                </Viewbox>
            </ToggleButton>
        </StackPanel>

        <Border.Background>
            <LinearGradientBrush>
                <GradientStop Color="#A4F" Offset="0"/>
                <GradientStop Color="#A4F" Offset="0.6"/>
                <GradientStop Color="#81F" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
    </Border>
</UserControl>
