<UserControl x:Class="EntityFrameworkLearn.View.Controls.NavButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EntityFrameworkLearn.View.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800">

    <Border Height="80" Margin="0,30,0,0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*" MinWidth="170"/>
                <ColumnDefinition Width="*" MinWidth="170"/>
                <ColumnDefinition Width="*" MinWidth="170"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1" Style="{StaticResource ButtonBack}" 
                    Margin="10"/>
            <Button Grid.Column="2" Style="{StaticResource MainButton}" 
                    Margin="10"/>
            <Button Grid.Column="3" Style="{StaticResource ButtonNext}" 
                    Margin="10"/>
        </Grid>
    </Border>
</UserControl>
